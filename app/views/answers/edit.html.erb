<div>
    <h2>回答を更新する</h2>
    <%= form_with model:[@question,@answer], local: true do |f| %>
        <div class="form-group">
            <div class="form-group">
                <label>名前</label>
                <%= f.text_field :name, class:"form-control" %>
            </div>
             <div class="form-group">
                <label>本文</label>
                <%= f.text_area :content, class:"form-control" %>
            </div>
            <div class="text-center">
                <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
    
</div>